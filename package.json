{
  "name": "mimir",
  "type": "module",
  "private": true,
  "workspaces": [
    "api",
    "www",
    "packages/*",
    "prisma"
  ],
  "scripts": {
    "db:reset": "yarn prisma migrate reset",
    "format": "prettier --cache --write '**/*.{js,md,mdx,ts,tsx,yml}'",
    "format:diff": "prettier --cache --list-different '**/*.{js.md,mdx,ts,tsx,yml}'",
    "lint": "eslint  '**/*.{js,ts,tsx}' --max-warnings=0",
    "postinstall": "husky install",
    "storybook": "storybook dev -p 6006"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@prisma/client": "4.12.0",
    "@storybook/addon-essentials": "^7.0.5",
    "@storybook/addon-interactions": "^7.0.5",
    "@storybook/addon-links": "^7.0.5",
    "@storybook/addon-styling": "^1.0.1",
    "@storybook/blocks": "^7.0.5",
    "@storybook/react": "^7.0.5",
    "@storybook/react-webpack5": "^7.0.5",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.22",
    "postcss-loader": "^7.2.4",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "prisma": "^4.12.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test",
          "style"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint"
    ],
    "**/*.s?css": [
      "prettier --write"
    ],
    "**/*.{md,yml}": [
      "prettier --write"
    ]
  },
  "license": "MIT",
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "@storybook/nextjs": "^7.0.5"
  }
}
